<Window x:Class="Lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Гра «Ворожка»"
        Height="400" Width="500"
        MinHeight="350" MinWidth="450"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">

   
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFB3E5FC" Offset="0.0"/>
            <GradientStop Color="#FF81D4FA" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

      
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF66BB6A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF388E3C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFBDBDBD"/>
                                <Setter Property="Foreground" Value="#FFF1F1F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

      
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#FF4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

      
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="TitleStyle" TargetType="TextBlock"
           BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>

 
    <Border Style="{StaticResource CardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
               
                <RowDefinition Height="Auto"/>
               
                <RowDefinition Height="Auto"/>
                
                <RowDefinition Height="Auto"/>
              
                <RowDefinition Height="*"/>
              
            </Grid.RowDefinitions>

          
            <TextBlock Grid.Row="0"
                 Text="Гра «Ворожка»"
                 Style="{StaticResource TitleStyle}"/>

           
            <TextBlock Grid.Row="1"
                 Text="Ваше питання:"
                 FontWeight="SemiBold"/>

          
            <TextBox Grid.Row="2"
               Text="{Binding Question, UpdateSourceTrigger=PropertyChanged}"
               HorizontalAlignment="Stretch"/>

          
            <Button Grid.Row="3"
              Content="Запитати"
              Command="{Binding AskCommand}"
              HorizontalAlignment="Center"
              MinWidth="180"
              MinHeight="50"/>

           
            <Border Grid.Row="4"
              Background="White"
              BorderBrush="#FF4CAF50"
              BorderThickness="2"
              CornerRadius="6"
              Padding="12"
              Margin="0,5,0,5"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              MinWidth="150">
            
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Answer}" Value="">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Answer}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <TextBlock Text="{Binding Answer}"
                   FontSize="24"
                   FontWeight="SemiBold"
                   TextAlignment="Center"
                   Foreground="#FF4CAF50"/>
            </Border>
        </Grid>
    </Border>
</Window>
